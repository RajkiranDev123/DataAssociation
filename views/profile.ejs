<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
     <a class="bg-red-500 p-1 rounded-md" href="/logout">Logout</a>

      <h3 class="text-3xl mb-3">Hello <%=user.name%></h3>

      <h4 class="mb-4">Create a new post</h4>
      <form action="/post" method="post">
        <textarea
          class="px-3 rounded-md py-2 outline-none bg-transparent border-2 border-zinc-800"
          type="text"
          placeholder="type your post..."
          name="content"
        ></textarea
        ><br />

        <input
          class="px-3 py-2 bg-blue-500 text-sm rounded-md cursor-pointer"
          type="submit"
          value="Post"
        />
      </form>




      <div class="posts mt-9">
        <h3 class="">Your posts</h3>

        <div class="postcontainer mt-3">
            <% user.posts.forEach(function(post){%>

                <div class="post w-1/3 p-5 border-2 rounded-md">

                    <h4 class="text-blue-400"><%= user.username%></h4>
                    <p><%= post?.content%></p>
                  <small><%= post?.likes.length%></small>
                    <div class="btns flex gap-4">
                        <a class="text-blue-500" href="/like/<%= post._id %>">
                          <%= post.likes.indexOf(user._id)==-1?"Like":"Unlike"%>
                        </a>
                        <a class="text-blue-500" href="/edit/<%=post._id%>">Edit</a>
    
    
                    </div>
                </div>




           <% }) %>
         

        </div>

      </div>

    </div>
  </body>
</html>
